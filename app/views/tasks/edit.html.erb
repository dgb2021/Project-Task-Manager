<div class="container-sm" style="margin: 30px; width: 400px; height: 300px;">
  <%= form_for(@task) do |f| %>
    <div class="card">
      <div class="card-body">
        
       <div class="mb-2">
        <%= f.label :name %>
        <%= f.text_field :name %>
       </div>

      <div class="mb-2">
        <%= f.label :details %>
        <%= f.text_field :details %>
      </div>
    
      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to 'All tasks', tasks_path, class: "btn btn-primary" %>

      </div>
    </div>
  <% end %>
</div>
